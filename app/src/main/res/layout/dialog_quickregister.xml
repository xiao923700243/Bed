<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/message_background"
    android:layout_width="300dp"
    android:layout_height="180dp">

    <TextView
        android:id="@+id/title_"
        android:textSize="14sp"
        android:text="@string/dialog_auto_title_msg"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
    <View
        android:background="#c9c9c9"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="@string/dialog_register_quick_user_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/user_"
                android:gravity="center_vertical"
                android:textColor="#FFCC00"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="12sp"
                android:text="@string/dialog_register_quick_password_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/password_"
                android:gravity="center_vertical"
                android:textColor="#FFCC00"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="#c9c9c9"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/confirm_"
            android:text="@string/public_confirm_msg"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <View
            android:background="#c9c9c9"
            android:layout_width="1px"
            android:layout_height="match_parent"></View>
        <TextView
            android:id="@+id/quick_login"
            android:text="@string/dialog_regiser_quick_login_msg"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>